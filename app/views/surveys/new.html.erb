<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
		<%= link_to "Home", root_path %>
	</li>
    <li class="breadcrumb-item active" aria-current="page">New Survey</li>
  </ol>
</nav>

<h1 class="pb-4 mt-4 mb-4 border-bottom">New Survey</h1>

<%= form_with scope: :survey, url: surveys_path, local: true do |form| %>
 
	<% if @survey.errors.any? %>
	  <div id="error_explanation" class="pb-4 mt-4 mb-2 border-bottom">
		<h2>
		  <%= pluralize(@survey.errors.count, "error") %> prohibited
		  this survey from being saved:
		</h2>
		<ul>
		  <% @survey.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		  <% end %>
		</ul>
	  </div>
	<% end %>
	
	<div class="input-group pb-4 pt-2 mb-4 border-bottom">
		<%= form.label :question, :value => "Question", :class => "input-group-text" %>
		<%= form.text_field :question, required: true, :class => "form-control" %>
	</div>

	<div class="input-group mb-4">
		<%= form.label :answer, :value => "Answer 1", :class => "input-group-text" %>
		<%= form.text_field :answer, :class => "form-control" %>
	</div>

	<div class="input-group mb-4">
		<%= form.label :answer2, :value => "Answer 2", :class => "input-group-text" %>
		<%= form.text_field :answer2, :class => "form-control" %>
	</div>

	<div class="input-group mb-4">
		<%= form.label :answer3, :value => "Answer 3", :class => "input-group-text" %>
		<%= form.text_field :answer3, :class => "form-control" %>
	</div>

	<div class="input-group mb-4">
		<%= form.label :answer4, :value => "Answer 4", :class => "input-group-text" %>
		<%= form.text_field :answer4, :class => "form-control" %>
	</div>

	<div class="input-group mb-4">
		<%= form.label :answer5, :value => "Answer 5", :class => "input-group-text" %>
		<%= form.text_field :answer5, :class => "form-control" %>
	</div>
   
	<div>
		<%= form.submit "Create", :class => "btn btn-primary" %>
	</div>
   
 <% end %>